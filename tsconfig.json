{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"typeRoots": ["./types", "./node_modules/@types"] 
	},
	"include": ["./api/*.ts"]
}
